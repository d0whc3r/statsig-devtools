{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "types": ["@testing-library/jest-dom", "node", "chrome", "webextension-polyfill"],
    "jsx": "react-jsx",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noUncheckedIndexedAccess": false,
    "exactOptionalPropertyTypes": false,
    "tsBuildInfoFile": "./.tsbuild/test.tsbuildinfo",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "~/*": ["./*"]
    }
  },
  "include": [
    "src/**/*",
    "entrypoints/**/*",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/test/**/*",
    "vitest.config.ts"
  ],
  "exclude": ["node_modules", ".output", "dist", "coverage", "e2e/**/*", "playwright.config.ts"]
}
