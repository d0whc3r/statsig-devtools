#!/usr/bin/env sh
echo "🚀 Running pre-push checks..."

# Run full project linting and formatting fixes
echo "🔧 Running lint fixes on entire project..."
npm run lint:fix

echo "🎨 Running format fixes on entire project..."
npm run format

# Run TypeScript type checking
echo "🔍 Running TypeScript type check..."
npm run type-check

# Run all tests
echo "🧪 Running all tests..."
npm run test

# Build extensions to ensure they compile correctly
echo "🏗️ Building extension for Chrome..."
npm run build

echo "🦊 Building extension for Firefox..."
npm run build:firefox

echo "✅ All pre-push checks passed! Ready to push."